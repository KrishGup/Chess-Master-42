<Window x:Class="chessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chessApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="inputTextBox" Width="200" Height="30" VerticalAlignment="Top" Margin="10"/>
        <Button Name="submitButton" Content="Submit" Width="100" Height="30" VerticalAlignment="Top" Margin="10,50,0,0" Click="SubmitButton_Click"/>
        <TextBlock Name="outputTextBlock" Width="200" Height="30" VerticalAlignment="Top" Margin="10,100,0,0"/>
    </Grid>
</Window>
