<Window x:Class="chessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBox Name="inputTextBox" Width="200" Height="30"/>
            <Button Content="Submit" Width="100" Height="30" Click="SubmitButton_Click"/>
            <TextBlock Name="outputTextBlock" Width="200" Height="30"/>
        </StackPanel>
        <!-- New chessboard layout -->
        <UniformGrid Name="ChessBoard" Rows="8" Columns="8" Margin="220,10,10,10">
            <!-- ...existing code (if any) or empty (buttons will be generated in code-behind)... -->
        </UniformGrid>
    </Grid>
</Window>